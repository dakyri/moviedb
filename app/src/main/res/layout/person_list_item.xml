<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="person" type="com.mayaswell.moviedb.MovieDbAPI.Person"/>
    </data>
    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/listItemMainPadding"
                android:layout_margin="@dimen/listItemMainMargin"
                android:background="@drawable/list_item_bg"
                android:id="@+id/personItem">

        <ImageView
            android:layout_width="@dimen/imageWidth"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/listItemTextMargin"
            android:adjustViewBounds="true"
            app:imageUrl="@{person.profilePath}"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toLeftOf="@+id/ratingText"
            android:id="@+id/titleText"
            android:text="@{person.name}"
            android:ellipsize="end"
            style="@style/MovieTitleText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/ratingText"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/listItemTextMargin"
            android:text='@{String.format("%.1f",person.popularity)}'
            style="@style/MovieRatingText"
            /><!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/titleText"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toLeftOf="@+id/yearText"
            android:id="@+id/genreText"
            app:tvGenreList="@{tv.genreIds}"
            android:ellipsize="end"
            style="@style/MovieSubheadingText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:id="@+id/yearText"
            android:layout_below="@+id/titleText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/listItemTextMargin"
            android:text='@{person.releaseDate.split("-")[0]}'
            style="@style/MovieSubheadingDateText"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:maxLines="@integer/maxDescriptionLines"
            android:layout_marginTop="@dimen/listItemDescriptionSeparation"
            android:layout_marginRight="@dimen/listItemTextMargin"
            android:id="@+id/descriptionText"
            android:layout_below="@+id/genreText"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@{person.overview}"
            android:ellipsize="end"
            style="@style/MovieDescriptionText"
            />-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemButton"
            android:text="@string/more_info"
            android:layout_below="@+id/titleText"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/listItemTextMargin"
            android:layout_marginBottom="@dimen/listItemTextMargin"
            android:background="#ffffff"
            android:onClick="onClickPerson"
            style="@style/MovieItemButton"
            />
    </RelativeLayout>
</layout>